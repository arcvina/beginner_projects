print("Welcome to temperature Converter")
first_unit = input("Please enter your starting unit. F (Fahrenheit), C (Celsius), K (Kelvin): ").upper()
first_temp = float(input("Now enter the value of your starting temperature: "))
final_unit = input("What unit would you like to convert the temperature into? Enter F, C, or K: ").upper()

warning = "Please ensure that the starting unit differs from the unit you'd like to convert it into"

def convert(first_unit, first_temp, final_unit):
    if first_unit == final_unit:
        print(warning)
        return None


    if first_unit == 'F':
        if final_unit == 'C':
            final_temp = (first_temp - 32) * 5/9
        elif final_unit == 'K':
            final_temp = (first_temp - 32) * 5/9 + 273.15 
        else:
            print(warning)
            return None
        


    elif first_unit == 'C':
        if final_unit == 'F':
            final_temp = (first_temp * 9/5) + 32 
        elif final_unit == 'K':
            final_temp = first_temp + 273.15
        else:
            print(warning)
            return None



    elif first_unit == 'K':
        if final_unit == 'F':
            final_temp = (first_temp - 273.15) * 9/5 + 32
        elif final_unit == 'C':
            final_temp = first_temp - 273.15
        else:
            print(warning)
            return None
        

    return final_temp



final_temp = convert(first_unit, first_temp, final_unit)

if final_temp is not None:
    print(f"{first_temp} {first_unit} is equal to {final_temp:.2f} {final_unit}")
